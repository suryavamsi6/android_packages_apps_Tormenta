<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/lluvia_settings_title" >

        <!-- Buttons -->
        <PreferenceScreen
            android:key="buttonsettings_category"
            android:title="@string/button_title"
            android:fragment="com.lluvia.settings.fragments.ButtonSettings"
            android:icon="@drawable/ic_settings_buttons"/>

        <!-- Navigation Bar -->
        <PreferenceScreen
            android:key="navigationbar_category"
            android:title="@string/navbar_title" 
            android:fragment="com.lluvia.settings.fragments.NavbarSettings"
            android:icon="@drawable/ic_settings_navbar"/>

        <!-- Power Menu -->
        <PreferenceScreen
            android:key="powermenu__category"
            android:title="@string/powermenu_title" 
            android:fragment="com.lluvia.settings.fragments.PowerMenuSettings"
            android:icon="@drawable/ic_settings_powermenu"/>

</PreferenceScreen>
